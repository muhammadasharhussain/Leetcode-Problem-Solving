#include <string.h>
bool checkRecord(char* s) {
    int absent=0;
    int late=0;
    int flag=0;
    int a=strlen(s);
    for(int i=0;i<a;i++){
                if (s[i]=='A'){
                    absent++;
                    late=0;
                }
                else if (s[i]=='L'){
                    late++;
                }
                else 
                    late=0;
        if (absent>1 || (late>=3))
        return false;
    }
return true;
}
